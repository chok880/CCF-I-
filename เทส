-- chok hub UI แบบสมบูรณ์ (Fade-in + Hover + Click + Sound)
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local playerGui = player:WaitForChild("PlayerGui")

-- สร้าง Sound Object
local clickSound = Instance.new("Sound")
clickSound.SoundId = "rbxassetid://9118825196" -- เสียงคลิกเบา ๆ
clickSound.Volume = 0.5
clickSound.Parent = player.PlayerGui

-- สร้าง ScreenGui
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "ChokHubUI"
screenGui.Parent = playerGui

-- สร้าง Frame หลัก
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 350, 0, 180)
frame.Position = UDim2.new(0.5, -175, 0.5, -90)
frame.BackgroundColor3 = Color3.fromRGB(20, 20, 25)
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5,0.5)
frame.Parent = screenGui
frame.BackgroundTransparency = 1 -- สำหรับ fade-in

-- เงา (UICorner + UIStroke)
local uicorner = Instance.new("UICorner")
uicorner.CornerRadius = UDim.new(0, 15)
uicorner.Parent = frame

local uistroke = Instance.new("UIStroke")
uistroke.Color = Color3.fromRGB(0, 170, 255)
uistroke.Thickness = 2
uistroke.Parent = frame

-- Fade-in UI
TweenService:Create(frame, TweenInfo.new(0.5), {BackgroundTransparency = 0}):Play()

-- ชื่อ UI
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 0)
title.BackgroundTransparency = 1
title.Text = "chok hub"
title.TextScaled = true
title.TextColor3 = Color3.fromRGB(0, 255, 255)
title.Font = Enum.Font.GothamBold
title.Parent = frame

-- ฟังก์ชันสร้างปุ่มโมเดิร์นพร้อม hover, click, sound
local function createButton(name, position, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0, 300, 0, 50)
    btn.Position = position
    btn.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.TextScaled = true
    btn.Text = name
    btn.Font = Enum.Font.GothamBold
    btn.AutoButtonColor = false

    -- มุมมน & ขอบ
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 12)
    btnCorner.Parent = btn

    local btnStroke = Instance.new("UIStroke")
    btnStroke.Color = Color3.fromRGB(255,255,255)
    btnStroke.Thickness = 1
    btnStroke.Parent = btn

    btn.Parent = frame

    -- Tween hover (ไล่สี)
    local hoverTweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local normalColor = Color3.fromRGB(0,170,255)
    local hoverColor = Color3.fromRGB(0, 255, 255)

    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, hoverTweenInfo, {BackgroundColor3 = hoverColor}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, hoverTweenInfo, {BackgroundColor3 = normalColor}):Play()
    end)

    -- Click effect (สั่นเล็กน้อย + เสียง)
    local clickTweenInfo = TweenInfo.new(0.1, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    btn.MouseButton1Click:Connect(function()
        clickSound:Play()
        local originalSize = btn.Size
        local bounceSize = UDim2.new(originalSize.X.Scale, originalSize.X.Offset*0.95, originalSize.Y.Scale, originalSize.Y.Offset*0.95)
        TweenService:Create(btn, clickTweenInfo, {Size = bounceSize}):Play()
        wait(0.1)
        TweenService:Create(btn, clickTweenInfo, {Size = originalSize}):Play()
        callback()
    end)
end

-- ปุ่ม Run ปกติ
createButton("Run ปกติ", UDim2.new(0, 25, 0, 50), function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/chok880/CCF-I-/refs/heads/main/Prospecting", true))()
    screenGui:Destroy()
end)

-- ปุ่ม Run กันเทส
createButton("Run กันเทส", UDim2.new(0, 25, 0, 110), function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/chok880/CCF-I-/main/Prospecting%20A", true))()
    screenGui:Destroy()
end)

-- ทำให้ draggable
local UIS = game:GetService("UserInputService")
local dragging
local dragInput
local dragStart
local startPos

local function update(input)
    local delta = input.Position - dragStart
    frame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
end

frame.InputBegan:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = true
        dragStart = input.Position
        startPos = frame.Position

        input.Changed:Connect(function()
            if input.UserInputState == Enum.UserInputState.End then
                dragging = false
            end
        end)
    end
end)

frame.InputChanged:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseMovement then
        dragInput = input
    end
end)

UIS.InputChanged:Connect(function(input)
    if input == dragInput and dragging then
        update(input)
    end
end)
